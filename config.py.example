'''设置'''

# bilibili_api 设置，**必填**
BILI_UID = '你的 Bilibili UID'  # str

# bilibili_api 授权设置，选填（隐私设置为不公开则**必填**）
SESSDATA = '你的 Bilibili SESSDATA'  # str
BILI_JCT = '你的 Bilibili bili_jct'  # str
BUVID3 = '你的 Bilibili buvid3'  # str

# Bangumi OAuth2 授权设置，**必填**
APP_ID = '你的 Bangumi App ID'  # str
APP_SECRET = '你的 Bangumi App Secret'  # str

# 跳过更新已经收藏且收藏状态相同的动画的更新状态和收视进度
SKIP_COLLECTED = True  # bool，默认 True

# 自动打开更新失败的动画的 Bilibili 页面
OPEN_FAILED_BANGUMI_BILI_PAGE = False  # bool，默认 False

# 每站点最大并发连接数（太多并发连接可能会导致 503）
CONNECTION_LIMIT_PER_HOST = 15  # int，默认 15

# 打印调试信息，调试用
PRINT_DEBUG_INFORMATION = False  # bool，默认 False

# 不实际更新动画进度和收藏，调试用
READ_ONLY = False  # bool，默认 False